<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/llMain"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBannerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/tvBookNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/cd_primary_box_with_corner"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text="@string/more_info"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/llOfferLock"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_layer"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/margin_30"
                    android:src="@drawable/ic_lock"/>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:text="@string/temporerily_unavailable_noffer_is_only_available_during_nschedule_time_nplease_try_again_later"
                    android:layout_marginTop="4dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivRedeemed"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:layout_width="80dp"
                android:src="@drawable/ic_redeem"
                android:layout_height="80dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvOfferName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="s"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/tvOfferSubName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:text="s"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>
