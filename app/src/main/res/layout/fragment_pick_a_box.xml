<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llFragmentBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="61dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebas_kai_regular"
                android:text="@string/dining"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="@string/dummy_text"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/pickabox_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="40dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvTabPickABox"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAllCaps="true"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/segoe_bold"
                                android:gravity="center"
                                android:text="@string/tab_pick_a_box"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTabWhatYouWin"
                                android:textAllCaps="true"

                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/segoe_bold"
                                android:gravity="center"
                                android:text="@string/tab_what_you_win"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTabMyPrice"
                                android:textAllCaps="true"

                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/segoe_bold"
                                android:gravity="center"
                                android:text="@string/tab_my_prizes"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvActivePrice"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/round_view"
                            android:gravity="center"
                            android:padding="2dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="8sp"

                            android:visibility="gone"
                            app:fontFamily="@font/segoe_bold"
                            tools:text="0"/>
                    </RelativeLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vpGame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                        <LinearLayout
                            android:id="@+id/llMainLayout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llPickABox"
                                android:visibility="visible"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/llPickBox"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                       >

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/segoe_normal"
                                            app:fontFamily="@font/segoe_normal"
                                            android:gravity="center"
                                            android:text="@string/pick_a_box_3_times"
                                            android:textColor="@color/black"
                                            android:textSize="13sp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/segoe_bold"
                                            android:gravity="center"
                                            android:layout_marginTop="4dp"
                                            android:padding="5dp"
                                            android:text="@string/simply_tap_box_to_reveal_your_prize"
                                            android:textColor="@color/black"
                                            android:textSize="13sp" />

                                    </LinearLayout>
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/msgError"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@color/dialog_bar_color"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/segoe_normal"
                                        app:fontFamily="@font/segoe_normal"
                                        android:text="@string/oh_no_text"
                                        android:textColor="@color/black"
                                        android:visibility="gone"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <androidx.appcompat.widget.AppCompatImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:src="@drawable/box_bg" />

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:orientation="horizontal">

                                                    <androidx.appcompat.widget.AppCompatImageView
                                                        android:id="@+id/ivBox1"
                                                        android:layout_width="90dp"

                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox2"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox3"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox4"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />


                                                </LinearLayout>
                                            </FrameLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-30dp"
                                            android:orientation="vertical">

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <androidx.appcompat.widget.AppCompatImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:src="@drawable/box_bg" />

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:id="@+id/ivBox5"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />


                                                    <ImageView
                                                        android:id="@+id/ivBox6"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox7"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox8"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />
                                                </LinearLayout>
                                            </FrameLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-30dp"
                                            android:orientation="vertical">

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <androidx.appcompat.widget.AppCompatImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:src="@drawable/box_bg" />

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:id="@+id/ivBox9"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />


                                                    <ImageView
                                                        android:id="@+id/ivBox10"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox11"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox12"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />
                                                </LinearLayout>
                                            </FrameLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-30dp"
                                            android:orientation="vertical">

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <androidx.appcompat.widget.AppCompatImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="10dp"
                                                    android:src="@drawable/box_bg" />

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="15dp"
                                                    android:layout_marginRight="15dp"
                                                    android:orientation="horizontal">

                                                    <ImageView
                                                        android:id="@+id/ivBox13"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />


                                                    <ImageView
                                                        android:id="@+id/ivBox14"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox15"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />

                                                    <ImageView
                                                        android:id="@+id/ivBox16"
                                                        android:layout_width="90dp"
                                                        android:layout_height="90dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/box_close" />
                                                </LinearLayout>
                                            </FrameLayout>
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llWhatYouWin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvYouWin"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:clipToPadding="false"
                                    android:paddingBottom="30dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llMyPrice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/segoe_bold"
                                    android:text="@string/welcome"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvpricesYouWon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/segoe_bold"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textColor="@color/black"
                                    tools:text="You have 1 price waiting in your cart" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvMyPrizes"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="10dp">

                                    </androidx.recyclerview.widget.RecyclerView>
                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTermsAndCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_transparent"
                        android:fontFamily="@font/segoe_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingEnd="@dimen/margin_16"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--<ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/svg_top_right_rounded_corner" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/svg_top_left_rounded_corner" />-->

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
