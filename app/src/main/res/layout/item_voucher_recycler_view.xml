<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlItemVoucher"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:paddingRight="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:id="@+id/rlVoucherRecycler"
        android:layout_width="90dp"
        android:background="@color/white"

        android:layout_height="90dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageVoucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            tools:src="@drawable/default_img" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rlVoucherRecycler"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtVoucherTitle"
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_bold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtVoucherDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/txtVoucherTitle"
            tools:text="adsfasdf"
            android:fontFamily="@font/segoe_italic"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtVoucherDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_greenarrow_v"
            android:paddingTop="5dp"
            android:fontFamily="@font/segoe_bold_italic"
            android:text="@string/redeem"
            android:textAllCaps="true"
            android:textColor="@color/hash569bbf"
            android:textSize="10sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRedeemed"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivRibbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-15dp"
            android:src="@drawable/ic_ribon" />

    </RelativeLayout>

</RelativeLayout>